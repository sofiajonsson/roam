<h2>Edit Your Post</h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |m| %>
    <%= m %>
  <% end%>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
<br>
  <%= f.label :location %> <br>
  <%= f.collection_select :location_id, Location.all, :id, :name, include_blank: "Select a Location" %> <br>
<br>
  <%= f.label :description %> <br>
  <%= f.text_area :description %> <br>
  <%= f.submit %>
  
<% end %>
